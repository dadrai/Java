import java.util.Scanner;

public class main {
  public static void main(String[] args) {
    Scanner in = new Scanner(System.in);
  double sum,j,i,x,a,b,c,m,n;
  double chi;
	 //System.out.println("Vvedite n");
   //n = in.nextDouble();
  int p =0,o=0;
  n=1;
 while (n!=0){
   System.out.println("Vvedite n");
   n = in.nextDouble();
   if (n>0) p++;
   else if(n<0)  o++;
 }
  System.out.println("polozhit = "+p);
  System.out.println("Otricat = "+o);
  
}
}
