import java.util.Scanner;

public class main {
  public static void main(String[] args) {
    Scanner in = new Scanner(System.in);
  int sum,x,a,b,c,m,n;
	 //System.out.println("Vvedite n");
   //n = in.nextDouble();
  int i=1;
  do{
    int num =0;
      for (int j=1;j<=i;j++) {
     System.out.print(num +" ");
     num++;}
    
    System.out.println();
    i++;
  }while (i<=6);
  i=5;
  do{
    int num =0;
      for (int j=1;j<=i;j++) {
     System.out.print(num +" ");
     num++;}
    
    System.out.println();
    i--;
  }while (i>0);
  
  
}
}
