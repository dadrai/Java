import java.util.Scanner;

public class main {
  public static void main(String[] args) {
    Scanner in = new Scanner(System.in);
  double sum,i,x,a,b,c,m,n;
	 System.out.println("Vvedite n");
    n = in.nextDouble();
    sum=0;
    i=1;
    while (i<=n) {
      sum+=i;
      i++;
    }
    x=(n*(n+1))/2;
    if(sum==x) System.out.println(x +" = "+sum);
}
} 
