import java.util.Scanner;

public class main {
  public static void main(String[] args) {
    Scanner in = new Scanner(System.in);
  int sum,j,i,x,a,b,c,m,n;
  double chi;
	 //System.out.println("Vvedite n");
   // n = in.nextDouble();
  chi=9870;
  i=1;
  while (chi<=30000){
    chi=chi + (chi*0.1);
    System.out.println("Cherez "+i+" god chislennost = "+ (chi - (chi %1)));
    if (chi > 30000) System.out.println("Chislennost previshaet 30000 cherez "+i+ " let");
    i++;
  }
  
  
}
}
